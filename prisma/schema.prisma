generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @unique @default(uuid())
  user_name    String
  email        String   @unique
  password     String
  image_profil String   @default("https://t3.ftcdn.net/jpg/05/16/27/58/360_F_516275801_f3Fsp17x6HQK0xQgDQEELoTuERO4SsWV.jpg")
  role         String   @default("USER")
  createdAt    DateTime @default(now())
  token        String?   @unique
  updatedAt    DateTime @updatedAt
}
